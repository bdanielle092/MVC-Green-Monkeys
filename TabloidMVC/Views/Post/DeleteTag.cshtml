@model TabloidMVC.Models.ViewModels.DeletePostTagViewModel

@{
    ViewData["Title"] = "DeleteTag";
}

<h1>DeleteTag</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>PostTag</h4>
    <hr />
    <dl class="row">
        <form asp-action="Delete">
            <dt class="col-sm-2">
                <select multiple="multiple" asp-for="selectedPostTags">
                    @foreach (PostTag postTag in Model.postTags)
                    {
                        <option value="@postTag.Id">
                            @postTag.Tag.Name
                        </option>
                    }
                </select>
            </dt>
            <span asp-validation-for="selectedPostTags"></span>
            <dd class="col-sm-10">
                <div>
                    <input type="submit" value="Delete" class="btn btn-danger" /> 
                </div>
                </dd>
        </form>
        <div><a asp-action="Index">Back to List</a></div>
    </dl>
</div>
